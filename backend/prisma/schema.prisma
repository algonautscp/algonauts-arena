generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(MEMBER)

  codeforcesHandle String?
  leetcodeHandle   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  solves              ProblemSolve[]
  members TeamMember[]
  contestSubmissions  ContestSubmission[]
  practiceGoals       PracticeGoal[]
  mentorNotes         MentorNote[] @relation("MentoredNotes")
  mentoredNotes       MentorNote[] @relation("ReceivedNotes")
  
  // Practice feature relations
  createdTopics       PracticeTopic[] @relation("CreatedTopics")
  suggestedQuestions  PracticeQuestion[] @relation("SuggestedQuestions")
  approvedQuestions   PracticeQuestion[] @relation("ApprovedQuestions")
  practiceAttempts    PracticeAttempt[] @relation("PracticeAttempts")
}

enum Role {
  ADMIN
  MENTOR
  MEMBER
}

model Team {
  id        String   @id @default(uuid())
  name      String
  contestId String

  createdAt DateTime @default(now())

  contest Contest @relation(fields: [contestId], references: [id], onDelete: Cascade)
  members TeamMember[]
  submissions ContestSubmission[]
}

model TeamMember {
  id      String @id @default(uuid())
  teamId  String
  userId  String

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
}


model ProblemSolve {
  id          String   @id @default(uuid())
  userId      String
  platform    Platform
  problemName String
  problemUrl  String
  difficulty  Difficulty?
  source      Source   @default(USER_ADDED)

  solvedAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@unique([userId, problemUrl])
}

enum Platform {
  CODEFORCES
  CODECHEF
  LEETCODE
  ATCODER
  OTHER
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum Source {
  USER_ADDED
  IMPORTED
}

model Contest {
  id        String   @id @default(uuid())
  name      String
  startTime DateTime
  endTime   DateTime
  isTeamBased Boolean @default(false)

  createdAt DateTime @default(now())

  problems     ContestProblem[]
  submissions  ContestSubmission[]
  teams        Team[]
}


model ContestProblem {
  id        String   @id @default(uuid())
  contestId String
  problemUrl String
  points    Int?

  contest Contest @relation(fields: [contestId], references: [id], onDelete: Cascade)

  @@index([contestId])
}

model ContestSubmission {
  id        String   @id @default(uuid())
  contestId String
  userId    String?
  teamId    String?
  problemUrl String
  status    SubmissionStatus

  submittedAt DateTime @default(now())

  contest Contest @relation(fields: [contestId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  team    Team?   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([contestId])
}


enum SubmissionStatus {
  ACCEPTED
  WRONG_ANSWER
  TIME_LIMIT
  RUN_TIME_ERROR
  SKIPPED
}

model PracticeGoal {
  id            String    @id @default(uuid())
  userId        String
  weeklyTarget  Int
  minDifficulty Difficulty
  createdAt     DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@unique([userId])
}

model MentorNote {
  id        String   @id @default(uuid())
  mentorId  String
  userId    String
  content   String
  createdAt DateTime @default(now())

  mentor User @relation("MentoredNotes", fields: [mentorId], references: [id], onDelete: Cascade)
  user   User @relation("ReceivedNotes", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([mentorId])
}

// Practice Topics
model PracticeTopic {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy User       @relation("CreatedTopics", fields: [createdById], references: [id], onDelete: Cascade)
  questions PracticeQuestion[]

  @@index([createdById])
}

// Practice Questions
model PracticeQuestion {
  id          String   @id @default(uuid())
  topicId     String
  name        String
  url         String   @unique
  platform    String?
  difficulty  String?
  suggestedBy String?  // User ID who suggested this question
  approvedBy  String?  // User ID who approved this question
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  topic     PracticeTopic @relation(fields: [topicId], references: [id], onDelete: Cascade)
  attempts  PracticeAttempt[]
  suggested User?         @relation("SuggestedQuestions", fields: [suggestedBy], references: [id], onDelete: SetNull)
  approved  User?         @relation("ApprovedQuestions", fields: [approvedBy], references: [id], onDelete: SetNull)

  @@index([topicId])
  @@index([status])
  @@index([suggestedBy])
  @@index([approvedBy])
}

// Practice Attempts
model PracticeAttempt {
  id         String   @id @default(uuid())
  userId     String
  questionId String
  status     String   // SOLVED, WA, TLE, RTE
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User            @relation("PracticeAttempts", fields: [userId], references: [id], onDelete: Cascade)
  question PracticeQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId]) // Only one attempt per user per question
  @@index([userId])
  @@index([questionId])
}
